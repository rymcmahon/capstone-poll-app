/********** Application.rb styles **********/

html {
  position: relative;
  min-height: 100%;
}

.theme-showcase {
	margin-bottom: 120px;
}

.navbar-brand h3 {
	margin-top: 0;
}

footer p {
	color: #ffffff !important;
}

.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100px;
  background-color: #345578;
	color: #ffffff;
	margin-top: 20px;
}

#social-wrapper {
	text-align: center;
}

#social-wrapper img {
	padding: 20px 10px 0 10px;
}

/*********** Index page styles ***********/

#name-header {
	display: inline-block;
}

#name-header h1 {
	display: inline-block;
	margin: 0 0 0 20px;
}

#name-header h3 {
	display: block;
	margin: 0 0 0 20px;
}

#pol-header {
	margin: 80px 0 30px 0;
}

#pol-header h1 {
	font-weight: 700;
}

#pol-header h3 {
	font-size: 20px;
}

.pol-title {
	text-align: center;
	margin: 0;
}

.table > tbody > tr > td {
	vertical-align: middle !important;
}

.cursor-pointer {
	cursor: pointer;
}

.tbl-header {
	color: #3399F3;
}

#pol-score {
	font-size: 24px;
	font-weight: 700;
	color: #D90603;
} 

.jumbotron {
	/*background: url('<%= asset_path("us-capitol-300.png") %>') no-repeat left center;*/
	max-width: 100%;
	margin: 0 auto;
}

.jumbotron h1 {
	font-weight: 700;
}

#capitol-img {
	display: inline-block;
	vertical-align: top;
  padding-top: 10px;
}

#jumbotron-copy {
	display: inline-block;

}

/*********** 768px and up media query ***********/
@media screen and (min-width: 768px) {
	.jumbotron {
	  padding: 0 !important;
	}
}

/*********** Up to 700 media query ***********/
@media screen and (max-width: 700px) {
	#capitol-img img {
	  max-width: 100%;
	}

	.jumbotron {
	  padding-top: 0 !important;
	}
	
	#jumbotron-copy {
		text-align: center;
	}

	#jumbotron-copy h1 {
		display: none;

	}

	#jumbotron-copy h2 {
		font-size: 16px;
	}

	#jumbotron-copy p {
		font-size: 12px;
	}

	#break {
		display: none;
	}

	.pol-title {
		font-size: 30px;
	}

	#pol-header {
		margin-top: 30px;
	}

	#name-header h1 {
		font-size: 34px;
	}

	#show-score {
		margin: 10px 0 10px 67px !important;
	}

	#show-score h2 {
		font-size: 32px !important;
	}

	.panel-body {
  	padding: 5px !important;
	}

	#show-header img {
	margin-left: 33px;
	}
}

/*********** 768 to 991 media query ***********/
@media screen and (min-width: 768px) and (max-width: 991px) {
	#show-score {
		margin-left: 31px !important;
		width: 151px;
	}

	.panel-title {
		font-size: 16px;
		text-align: center;
	}

	#jumbotron-copy {
  	display: inline-block;
  	padding: 40px 16px 0 0px;
	}

	#jumbotron-copy h1{	
  	font-size: 32px;
 	}

 	#jumbotron-copy h2 {	
  	font-size: 20px;
 	}

 	#jumbotron-copy p {	
  	font-size: 12px;
 	}
}

